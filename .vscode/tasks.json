{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run current C++ file with input.txt",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "cd \"${fileDirname}\" && g++ \"${file}\" -o \"${fileBasenameNoExtension}.exe\" && \"${fileBasenameNoExtension}.exe\" < input.txt > output.txt"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
